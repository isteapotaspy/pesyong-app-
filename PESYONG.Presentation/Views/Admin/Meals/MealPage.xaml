<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PESYONG.Presentation.Views.Admin.Meals.MealPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PESYONG.Presentation.ViewModels.Admin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="AdminMealListViewTemplate" x:DataType="local:MealViewModel">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="{x:Bind ImageSource}" Width="24" Height="24" Stretch="UniformToFill"/>
                <TextBlock Grid.Column="1"
                     Text="{x:Bind MealName}"
                     x:Phase="1"
                     Style="{ThemeResource BaseTextBlockStyle}"
                     Margin="12,6,0,0"/>
                <TextBlock  Grid.Column="1"
                     Grid.Row="1"
                     Text="{x:Bind DeliveryType}"
                     x:Phase="2"
                     Style="{ThemeResource BodyTextBlockStyle}"
                     Margin="12,0,0,6"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" MaxWidth="360">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Takes all available space -->
                <RowDefinition Height="Auto"/>
                <!-- Fits button content -->
            </Grid.RowDefinitions>
            
            
            <ListView 
                Grid.Row="0"
                SelectionMode="Single" 
                ItemsSource="{x:Bind Meals}"
                ItemTemplate="{StaticResource AdminMealListViewTemplate}"
                SelectionChanged="ListView_SelectionChanged"
                Background="SaddleBrown"/>

            <Button Grid.Row="1" Style="{StaticResource AccentButtonStyle}" Content="Add another meal"/>
        </Grid>

        <StackPanel Grid.Column="1" >


            <StackPanel Orientation="Horizontal">
                <Image Source="{x:Bind SelectedMeal.ImageSource}" Width="72" Height="72" Stretch="UniformToFill"/>
                <StackPanel>
                    <TextBox Grid.Row="1" Header="Meal ID" 
                         Text="{x:Bind SelectedMeal.MealID, Mode=TwoWay}" />
                    <TextBox Grid.Row="2" Header="Meal Name" 
                         Text="{x:Bind SelectedMeal.MealName, Mode=TwoWay}" />
                </StackPanel>
            </StackPanel>

            <TextBox Grid.Row="2" Header="Description" 
                    Text="{x:Bind SelectedMeal.Description, Mode=TwoWay}" />
            <TextBox Grid.Row="2" Header="Pricing" 
                    Text="{x:Bind SelectedMeal.MealPrice, Mode=TwoWay}" />

            <StackPanel Orientation="Vertical">
                <ComboBox IsEditable="True" ItemsSource="{x:Bind SelectedMeal.StockQuantity}" Header="Stock Quantity" />
                <TextBlock SelectionHighlightColor="Green">Put selected meal status here</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
