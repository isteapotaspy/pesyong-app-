<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="PESYONG.Presentation.Components.Layouts.AdminLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PESYONG.Presentation.Components.Layouts"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d">

    <NavigationView x:Name="AdminLayoutNavView" 
                    Grid.Row="0" 
                    Height="Auto"
                    IsPaneOpen="False"
                    PaneDisplayMode="Auto"
                    IsTabStop="False"
                    ItemInvoked="NavigationViewItem_Invoked">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Dashboard" 
                                Icon="Home" ToolTipService.ToolTip="Dashboard" 
                                Tag="PESYONG.Presentation.Views.Admin.DashboardPage"/>
            
            <NavigationViewItem Content="Meals" Icon="Contact" ToolTipService.ToolTip="Account">
                <NavigationViewItem.MenuItems>
                <NavigationViewItem Content="Individual Meals" 
                                        Icon="Mail" ToolTipService.ToolTip="Individual Meals" 
                                        Tag="PESYONG.Presentation.Views.Admin.Meals.MealPage"/>
                <NavigationViewItem Content="Meal Packages" 
                                        Icon="Calendar" ToolTipService.ToolTip="Calendar" 
                                        Tag="PESYONG.Presentation.Views.Admin.Meals.MealPackagePage"/>
                </NavigationViewItem.MenuItems>
            </NavigationViewItem>
            
            <NavigationViewItem Content="Logistics" Icon="Page2" ToolTipService.ToolTip="Document options" SelectsOnInvoked="False">
                <NavigationViewItem.MenuItems>
                    <NavigationViewItem Content="Events" Icon="OpenLocal" ToolTipService.ToolTip="Upload file" Tag="SamplePage6"/>
                    <NavigationViewItem Content="Deliveries" Icon="NewFolder" ToolTipService.ToolTip="Create new" Tag="SamplePage5"/>
                </NavigationViewItem.MenuItems>
            </NavigationViewItem>

            <NavigationViewItem Content="Transactions" Icon="Page2" ToolTipService.ToolTip="Document options" SelectsOnInvoked="False">
                <NavigationViewItem.MenuItems>
                    <NavigationViewItem Content="Orders" Icon="OpenLocal" ToolTipService.ToolTip="Upload file" Tag="SamplePage6"/>
                    <NavigationViewItem Content="Receipts" Icon="NewFolder" ToolTipService.ToolTip="Create new" Tag="SamplePage5"/>
                </NavigationViewItem.MenuItems>
            </NavigationViewItem>

            <NavigationViewItem Content="Administration" Icon="Page2" ToolTipService.ToolTip="Document options" SelectsOnInvoked="False">
                <NavigationViewItem.MenuItems>
                    <NavigationViewItem Content="Accounts" Icon="OpenLocal" ToolTipService.ToolTip="Upload file" Tag="SamplePage6"/>
                    <NavigationViewItem Content="Audits" Icon="NewFolder" ToolTipService.ToolTip="Create new" Tag="SamplePage5"/>
                </NavigationViewItem.MenuItems>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <NavigationView.AutoSuggestBox>
            <AutoSuggestBox QueryIcon="Find" AutomationProperties.Name="Search" />
        </NavigationView.AutoSuggestBox>

        <Frame x:Name="MainContentFrame" 
               Grid.Column="1"               
               VerticalAlignment="Stretch"/>
    </NavigationView>
</UserControl>
